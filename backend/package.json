{
  "name": "pro-cear",
  "version": "1.0.0",
  "main": "src/server.js",
  "author": "Paulo Davi",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon src/server.js",
    "commit": "npx git-cz"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-handlebars": "^4.0.4",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.4.6",
    "nodemailer-express-handlebars": "^4.0.0",
    "pg": "^8.2.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.10",
    "uuid": "^8.1.0",
    "validator": "^13.0.0",
    "yup": "^0.29.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "sequelize-cli": "^5.5.1",
    "sucrase": "^3.15.0"
  },
  "config": {
    "commitizen": {
      "path": "./backend/node_modules/cz-conventional-changelog",
      "maxLineWidth": 50,
      "defaultType": "feat",
      "defaultScope": "backend"
    }
  }
}
